{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: Client",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true
        },
        {
            "name": "Next.js: Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
            "args": [
                "dev"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
    ],
    "compounds": [
        {
            "name": "Next.js: Server & Client",
            "configurations": [
                "Next.js: Server",
                "Next.js: Client"
            ]
        }
    ]
}