{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "node",
      "vitest/globals",
    ],
    "allowJs": true,
    "target": "ES2018",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "declaration": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      // "react-native": [
      //   "./node_modules/react-native-web"
      // ],
      "@/*": [
        "./src/*"
      ],
      "@/next-portal/*": [
        "./packages/next-portal/src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.test.ts",
    "**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    ".next",
    "code-server",
    "postgres_data"
  ]
}